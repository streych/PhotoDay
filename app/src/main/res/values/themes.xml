<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.PhotoDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryPhotoDay</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryPhotoDay</item>
        <!-- Secondary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <item name="fontFamily">@font/dancingscriptvariablefontwght</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorError">@color/colorErrorPD</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="bottomAppBarStyle">@style/Widget.App.BottomAppBar</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <item name="textInputStyle">@style/textInputStyleP</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <!-- enabling transitions. -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- setting up enter and exit transition. -->
        <item name="android:windowEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowExitTransition">@transition/change_image_transform</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/AlertDialogBackgroundPD</item>
        <item name="android:windowTitleStyle">@style/TitleDialogTextStyle</item>
    </style>
    <style name="TitleDialogTextStyle">
        <item name="android:textColor">@color/TitleDialogTextStylePD</item>
    </style>

    <style name="Widget.App.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomAppBar</item>
    </style>
    <style name="ThemeOverlay.App.BottomAppBar" parent="">
        <item name="colorPrimary">@color/BottomAppBarColorPrimary</item>
        <item name="colorOnPrimary">@color/BottomAppBarColorOnPrimary</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/BottomAppBarFloatingActionButtonColorSecondary</item>
        <item name="colorOnSecondary">@color/BottomAppBarFloatingActionButtonColorOnSecondary</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="textInputStyleP" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterEnabled">true</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="counterMaxLength">15</item>
        <item name="android:inputType">text</item>
        <item name="boxCornerRadiusBottomStart">30sp</item>
        <item name="boxCornerRadiusBottomEnd">30sp</item>
        <item name="boxStrokeErrorColor">@color/colorErrorPD</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="counterOverflowTextColor">@color/black</item>
        <item name="boxBackgroundColor">@color/TextInputStylePDBoxBackgroundColor</item>
        <item name="boxStrokeColor">@color/TextInputStylePDBoxStrokeColor</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
        <item name="textOutlineColor">@color/purple_200</item>
        <item name="helperTextTextColor">@color/TextInputStylePDHelperTextTextColor</item>
        <item name="helperText">@string/wiki_helper</item>
    </style>


    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
        <item name="android:background">@color/purple_200</item>
    </style>
    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>
    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">24dp</item>
    </style>
    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipIconTint">@color/ChipPDchipIconTint</item>
        <item name="chipBackgroundColor">@color/ChipPDchipBackgroundColor</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="colorPrimary">@color/TextInputStylePDHelperTextTextColor</item>
        <item name="colorSurface">@color/teal_200</item>
        <item name="colorOnSecondary">@color/teal_700</item>
        <item name="tabTextAppearance">@color/colorPrimaryPhotoDay</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorOnPrimary">@color/colorErrorPD</item>
    </style>









</resources>

