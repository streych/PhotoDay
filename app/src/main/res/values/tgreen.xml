<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PhotoDaySuperStar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF0000</item>
        <item name="colorPrimaryVariant">#4CAF50</item>
        <item name="colorOnPrimary">#FF0000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:background">#4CAF50</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:alertDialogTheme">@style/AlertDialogCustomG</item>
        <!-- alertDialogTheme. -->
        <item name="chipStyle">@style/Widget.App.ChipG</item>
        <!-- chipStyle. -->
        <item name="textInputStyle">@style/textInputStyleG</item>
        <!-- textInputStyle. -->
    </style>


    <!-- alertDialogTheme. -->
    <style name="AlertDialogCustomG" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/background_mf</item>
        <item name="android:windowTitleStyle">@style/TitleDialogTextStyleG</item>
    </style>
    <style name="TitleDialogTextStyleG">
        <item name="android:textColor">#F44336</item>
    </style>

    <!-- chipStyle. -->
    <style name="Widget.App.ChipG" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipIconTint">#FF7C4D4D</item>
        <item name="chipBackgroundColor">#FFFFFF</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <!-- textInputStyleG. -->
    <style name="textInputStyleG" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterEnabled">true</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="counterMaxLength">15</item>
        <item name="android:inputType">text</item>
        <item name="boxCornerRadiusBottomStart">30sp</item>
        <item name="boxCornerRadiusBottomEnd">30sp</item>
        <item name="boxStrokeErrorColor">#7E0000</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="counterOverflowTextColor">@color/black</item>
        <item name="boxBackgroundColor">#FFFFFF</item>
        <item name="boxStrokeColor">#000000</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
        <item name="textOutlineColor">@color/purple_200</item>
        <item name="helperTextTextColor">#00749F</item>
        <item name="helperText">@string/wiki_helper</item>
    </style>

</resources>